#!/bin/sh
# chkconfig: 2345 20 80
# description: Handle tomcat instance <%= @title %>

# file managed by puppet

. /lib/lsb/init-functions

SHUTDOWN_WAIT=30

export JAVA_HOME="<%= @java_home %>"
export CATALINA_HOME="<%= @catalina_home %>"
export CATALINA_BASE="<%= @basedir %>"
export CATALINA_TMPDIR="<%= @basedir %>/temp"
export CATALINA_PID="${CATALINA_TMPDIR}/tomcat.pid"

# For SELinux we need to use 'runuser' not 'su'
if [ -x "/sbin/runuser" ]; then
    SU="/sbin/runuser -s /bin/sh"
else
    SU="su -s /bin/sh"
fi

start() {
  isrunning

  if [ "$?" = 0 ]; then
    echo "tomcat-<%= @title %> already running"
    return 0
  fi

  # Change directory to prevent path problems
  cd <%= @basedir %>
#<% if @tomcat_version_str == '5_package' -%>
#  # Source JVM parameters
#  test -r <%= @basedir %>/bin/setenv.sh && . <%= @basedir %>/bin/setenv.sh
#<% end -%>

  # Remove pidfile if still around
  test -f $CATALINA_PID && rm -f $CATALINA_PID

  $SU <%= @owner %> -c "umask 0002; <%= @catalina_script %> start" > /dev/null
}

stop() {
  isrunning

  if [ "$?" = 1 ]; then
    echo "tomcat-<%= @title %> already stopped"
    rm -f $CATALINA_PID # remove pidfile if still around
    return 0
  fi

  echo -n "Waiting for tomcat-<%= @title %> to exit (${SHUTDOWN_WAIT} sec.): "

  count=0
  until [ "$pid" = "" ] || [ $count -gt $SHUTDOWN_WAIT ]; do
    $SU <%= @owner %> -c "<%= @catalina_script %> stop -force" > /dev/null
    findpid

    echo -n "."
    sleep 3
    count=$((count+3))
  done

  echo ""

  if [ "$count" -gt "$SHUTDOWN_WAIT" ]; then
    echo "Forcing tomcat-<%= @title %> to stop"
    /bin/kill -9 $pid && sleep 5
  fi

  # check if tomcat is still around, this will be our exit status
  ! isrunning
}

findpid() {
  pid=""
  pid=$(pgrep -U <%= @owner %> -f "/java.*catalina.base=<%= @basedir %>")

  # validate output of pgrep
  if ! [ "$pid" = "" ] && ! [ "$pid" -gt 0 ]; then
    log_failure_msg "Unable to determine if tomcat-<%= @title %> is running"
    exit 1
  fi
}

isrunning() {
  findpid

  if [ "$pid" = "" ]; then
    return 1
  elif [ "$pid" -gt 0 ]; then
    return 0
  fi
}

case "$1" in
  start)
    start
    RETVAL=$?

    if [ "$RETVAL" = 0 ]; then
      log_success_msg "Started tomcat-<%= @title %>"
    else
      log_failure_msg "Not able to start tomcat-<%= @title %>"
    fi
    ;;

  stop)
    stop
    RETVAL=$?

    if [ "$RETVAL" = 0 ]; then
      log_success_msg "Stopped tomcat-<%= @title %>"
    else
      log_failure_msg "Not able to stop tomcat-<%= @title %>"
    fi
  ;;

  restart)
    stop
    sleep 5
    start
    RETVAL=$?

    if [ "$RETVAL" = 0 ]; then
      log_success_msg "Restarted tomcat-<%= @title %>"
    else
      log_failure_msg "Not able to restart tomcat-<%= @title %>"
    fi
  ;;

  status)
    isrunning
    RETVAL=$?

    if [ "$RETVAL" = 0 ]; then
      echo "tomcat-<%= @title %> (pid $pid) is running..."
    else
      echo "tomcat-<%= @tomcat_name %> is stopped"
      RETVAL=3
    fi
  ;;

  *)
    echo "Usage: $0 {start|stop|restart|status}."
  ;;

esac

exit $RETVAL
